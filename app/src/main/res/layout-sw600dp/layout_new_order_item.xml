<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
<RelativeLayout
    android:layout_width="@dimen/_60sdp"
    android:layout_height="@dimen/_60sdp"
    android:background="@drawable/background_grey"
    android:id="@+id/relative_dish_image"
    android:layout_margin="@dimen/_15sdp"
    >
    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:id="@+id/img_order_dish"
        android:src="@drawable/img_dosa"/>

</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_toEndOf="@+id/relative_dish_image">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/color_orange"
            android:id="@+id/order_dish_amount"
            android:textSize="30sp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_alignParentEnd="true"
            android:text="$15.00"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35sp"
                android:id="@+id/txt_extra_menu_item"
                android:textColor="@color/black"
                android:text="@string/paper_dosa"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/linear_size">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:maxLength="20"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="20sp"
                    android:id="@+id/txt_order_size"
                    android:text="(Medium)"/>
                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/ic_veg"
                    android:visibility="gone"
                    android:layout_marginStart="@dimen/_10sdp"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:itemCount="3"
                android:id="@+id/recycler_toppings"
                android:orientation="vertical"
                android:layout_below="@+id/relative_dish_image"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/layout_toppings">

            </androidx.recyclerview.widget.RecyclerView>
            <RelativeLayout
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_10sdp"


                android:padding="@dimen/_5sdp"
                android:id="@+id/relative_count"
                android:background="@drawable/background_grey_filled"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:id="@+id/txt_count"
                    android:textSize="28sp"

                    android:text="1"
                    android:layout_centerInParent="true"/>
                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:id="@+id/img_less"
                    android:src="@drawable/ic_minus"/>
                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/img_more"
                    android:src="@drawable/ic_plus"/>
            </RelativeLayout>

        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:id="@+id/img_delete"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/ic_delete"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</RelativeLayout>