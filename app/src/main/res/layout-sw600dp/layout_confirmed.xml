<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/info_background">
    <LinearLayout
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_gravity="center"
        android:id="@+id/linear_logo"
        android:background="@drawable/img_background_red"
        android:layout_marginTop="@dimen/_90sdp">
        <ImageView
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:padding="@dimen/_5sdp"
            android:scaleType="centerCrop"
            android:id="@+id/img_logo"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_18sdp"
            android:src="@drawable/logo"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_18sdp"
        android:textStyle="normal"
        android:textSize="30sp"
        android:textAllCaps="true"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:textColor="#ebfff1"
        android:lines="2"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:text="@string/correct_order"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recyler_order"
        tools:itemCount="1"
        tools:listitem="@layout/layout_order_item"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="@dimen/_110sdp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_45sdp"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textAllCaps="true"
            android:text="@string/no"
            android:background="@drawable/background_cancel"/>
        <TextView
            android:layout_width="@dimen/_110sdp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textAllCaps="true"
            android:text="@string/yes"
            android:background="@drawable/background_done"/>
    </LinearLayout>

</LinearLayout>