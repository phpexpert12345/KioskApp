<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="match_parent"


    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/edit_background"
        android:elevation="@dimen/_5sdp"
        android:padding="@dimen/_4sdp">

        <TextView
            android:id="@+id/txt_discounted_price"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_menu_title"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:text="$22.00"
            android:textColor="@color/color_orange"
            android:textSize="18sp"


            />

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_veg" />

        <ImageView
            android:id="@+id/img_menu_item"
            android:layout_width="@dimen/_120sdp"
            android:layout_height= "@dimen/_60sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:scaleType="fitCenter"
            android:src="@drawable/img_dosa" />

        <TextView
            android:id="@+id/txt_menu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_menu_item"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@string/paper_dosa"
            android:textColor="@color/menu_item_title"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_menu_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_menu_title"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="$15.00"
            android:textColor="@color/menu_item_title"
            android:textSize="18sp"
            android:textStyle="normal"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_menu_price"
            android:layout_marginTop="@dimen/_10sdp">

            <TextView
                android:id="@+id/txt_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_stroke"
                android:gravity="center"
                android:padding="@dimen/_4sdp"
                android:text="Add"
                android:textColor="@color/color_add"
                android:textSize="20sp" />


        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>