<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/info_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp"
        android:id="@+id/linear_name"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:background="@drawable/edit_background"
        android:layout_marginTop="@dimen/_100sdp">
        <ImageView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:scaleType="centerInside"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/image_background"


            android:src="@drawable/ic_user"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="29sp"
            android:inputType="text"
            android:maxLength="20"
            android:maxLines="1"
            android:textColor="@color/info_background"
            android:layout_gravity="center"
            android:id="@+id/edit_name"
            android:hint="@string/name"
            android:textColorHint="@color/hint_color"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="@null"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp"
        android:id="@+id/linear_phone"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_below="@+id/linear_name"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:background="@drawable/edit_background"
        >
        <ImageView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:scaleType="centerInside"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/image_background"


            android:src="@drawable/ic_baseline_phone_24"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="29sp"
            android:textColor="@color/info_background"
            android:layout_gravity="center"
            android:id="@+id/edit_phone"
            android:hint="@string/phone"
            android:inputType="phone"
            android:maxLines="1"
            android:maxLength="10"
            android:textColorHint="@color/hint_color"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="@null"
            />
    </LinearLayout>
    <Button
        android:layout_width="@dimen/_130sdp"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:background="@color/color_orange"
        android:layout_below="@+id/linear_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_25sdp"
        android:textSize="40sp"
        android:text="@string/guest_user"
        android:textColor="@color/white"
        android:id="@+id/btn_guest"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_guest"
        android:textColor="@color/white"
        android:textSize="25sp"

        android:layout_marginTop="@dimen/_35sdp"
        android:layout_centerHorizontal="true"
        android:text="@string/login_txt"
        android:id="@+id/txt_login"/>
    <Button
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/background_filled_orange"
        android:layout_below="@+id/txt_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_25sdp"
        android:textSize="40sp"
        android:text="@string/login"
        android:visibility="gone"
        android:textColor="@color/white"
        android:id="@+id/btn_login"/>

</RelativeLayout>