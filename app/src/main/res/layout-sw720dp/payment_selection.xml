<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/info_background">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="30sp"
        android:id="@+id/txt_pay"
        android:textAllCaps="true"
        android:layout_marginTop="@dimen/_100sdp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:lineSpacingExtra="11sp"
        android:text="@string/how_to_pay"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/txt_pay"
        android:layout_marginStart="@dimen/_30sdp">


    <LinearLayout
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/linear_pound"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_20sdp"

        android:background="@drawable/edit_background"
        android:orientation="vertical">

<ImageView
    android:layout_width="@dimen/_80sdp"
    android:layout_height="@dimen/_80sdp"
    android:src="@drawable/pound"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/pay_at_counter"
            android:textColor="#464646"
            android:textSize="30sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="20sp"
            android:textColor="#464646"

            android:gravity="center_horizontal"
            android:text="@string/cash"
            />
    </LinearLayout>
        <LinearLayout
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/linear_card"
        android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
        android:padding="@dimen/_20sdp"

        android:background="@drawable/edit_background"
        android:orientation="vertical">

<ImageView
    android:layout_width="@dimen/_80sdp"
    android:layout_height="@dimen/_40sdp"
    android:src="@drawable/card"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <ImageView
    android:layout_width="@dimen/_40sdp"
    android:layout_height="@dimen/_40sdp"
    android:src="@drawable/express"/>
                <ImageView
    android:layout_width="@dimen/_40sdp"
    android:layout_height="@dimen/_40sdp"
    android:src="@drawable/apple_pay"/>
            </LinearLayout>
            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/android_pay"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="30sp"
                android:textColor="#464646"

                android:gravity="center_horizontal"
                android:text="@string/pay_here"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textStyle="normal"
                android:textSize="20sp"
                android:textColor="#464646"

                android:gravity="center_horizontal"
               android:text="@string/cards_only"
                />
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>