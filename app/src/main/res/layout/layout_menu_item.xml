<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="match_parent"


    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_4sdp"
        android:elevation="@dimen/_5sdp"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/edit_background">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:gravity="center"
            android:textSize="12sp"
            android:elevation="@dimen/_10sdp"
            android:layout_gravity="center"
            android:text="$22.00"
            android:layout_below="@+id/txt_menu_title"
            android:id="@+id/txt_discounted_price"
            android:visibility="visible"
            android:textColor="@color/color_orange"


            />
    <ImageView
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_10sdp"
        android:layout_alignParentEnd="true"
        android:elevation="@dimen/_10sdp"
        android:src="@drawable/ic_veg"/>

        <ImageView
            android:id="@+id/img_menu_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_15sdp"
            android:scaleType="fitCenter"
            android:src="@drawable/img_dosa" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/paper_dosa"
        android:textStyle="normal"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_below="@+id/img_menu_item"
      android:layout_centerHorizontal="true"
        android:textColor="@color/menu_item_title"
        android:textSize="13sp"
        android:id="@+id/txt_menu_title"
        android:layout_marginTop="@dimen/_5sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$15.00"
            android:visibility="visible"
            android:layout_alignParentEnd="true"
            android:textStyle="normal"
            android:textColor="@color/menu_item_title"
            android:textSize="12sp"
            android:layout_below="@+id/txt_menu_title"
            android:layout_gravity="center"
            android:id="@+id/txt_menu_price"
            />


        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"

        android:layout_below="@+id/txt_menu_price">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_2sdp"
            android:textColor="@color/color_add"
            android:textSize="15sp"
            android:id="@+id/txt_add"
            android:gravity="center"
            android:background="@drawable/background_stroke"
            android:text="Add"/>

    </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>